{
  "name": "lmc/twig-components-bundle",
  "type": "symfony-bundle",
  "description": "Symfony bundle, which extends the twig implementation with an JSX syntax-like approach from React",
  "license": "proprietary",
  "repositories": [
  ],
  "authors": [
    {
      "name": "LMC, s.r.o."
    }
  ],
  "autoload": {
    "psr-4": {
      "Lmc\\TwigComponentsBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lmc\\TwigComponentsBundle\\": "tests/"
    }
  },
  "require": {
    "php": "^7.3",
    "symfony/config": "^4.2 || ^5.0",
    "symfony/dependency-injection": "^4.2 || ^5.0",
    "symfony/http-foundation": "^4.2 || ^5.0",
    "symfony/http-kernel": "^4.2 || ^5.0",
    "twig/twig": "^2.12.5 || ^3.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "mockery/mockery": "^1.4",
    "doctrine/cache": "^1.10",
    "lmc/coding-standard": "^2.1.2"
  },
  "scripts": {
    "ecs": "vendor/bin/ecs check --no-progress-bar --ansi  src/ tests/",
    "ecs:fix": "vendor/bin/ecs check --no-progress-bar --ansi --fix  src/ tests/",
    "tests": "vendor/bin/phpunit",
    "tests:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit"
  }
}
