{% set _elementType = (props.elementType is defined) ? props.elementType : 'div' %}
{% set _layoutClass = (props.layout is defined) ? ' Grid--' ~  props.layout : '' %}
{% set _colsClass = (props.cols is defined) ? ' Grid--cols-' ~  props.cols : '' %}
{% set _tabletClass = (props.tablet is defined) ? ' Grid--tablet--cols-' ~  props.tablet : '' %}
{% set _desktopClass = (props.desktop is defined) ? ' Grid--desktop--cols-' ~  props.desktop : '' -%}

{% if props.cols is defined or props.tablet is defined or props.desktop is defined %}
    {% set _layoutClass = '' %}
{% endif %}

<{{ _elementType }} class="{{ _className }}{{ _layoutClass }}{{ _colsClass }}{{ _tabletClass }}{{ _desktopClass }}{{ _class }}">
